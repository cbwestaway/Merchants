<% include ../partials/header %>
<div class="container">
    <div class ="row"> 
        <div class="form">
            <h1 style="text-align: center;">Edit <%= merchant.name %></h1>
                <form method="POST" action="/merchants/<%= merchant._id %>?_method=PUT">
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= merchant.name %>" name="merchant[name]">
                    </div>
                     <div class="form-group">
                        <input class="form-control" type="text" value="<%= merchant.image %>" name="merchant[image]">
                    </div>
                     <div class="form-group">
                        <input class="form-control" type="text" value="<%= merchant.location %>" name="merchant[location]">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= merchant.description %>" name="merchant[description]">
                    </div>
                     <div class="form-group">
                        <button type="submit" class="btn btn-lg btn-primary btn-block">SUBMIT</button>
                    </div>
                </form>
        </div>
    </div> 
</div> 