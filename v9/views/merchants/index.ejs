<% include ../partials/header %>
 
 <div class="container">   
    <header class="jumbotron">
        <div class="container">
            <h1>Merchants List</h1>
            <p>Explore some of the finest vendors worldwide</p>
            <p>
                <a class="btn btn-primary btn-large" href="/merchants/new">Add a Merchant</a>
            </p>
        </div>
    </header>
    
    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Reknowned Merchants</h3>
        </div>
    </div>
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% merchant.forEach(function(merch){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= merch.image %>" >
                </div>
                <div class="caption">
                    <h4> <%= merch.name %> </h4>
                </div>
                <p>
                    <a href="/merchants/<%= merch._id %>" class="btn btn-primary">See More</a>
                </p>
            </div>
        <% }); %>   
    </div>
    
</div>
<% include ../partials/footer %>